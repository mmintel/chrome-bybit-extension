{
  "short_name": "Bybit R:R",
  "name": "Bybit Risk:Reward Calculator",
  "version": "1.0",
  "manifest_version": 3,
  "icons": {
    "16": "logo192.png",
    "48": "logo192.png",
    "128": "logo192.png"
  },
  "action": {
    "default_popup": "index.html",
    "default_title": "Bybit Risk:Reward Calculator"
  },
  "permissions": ["activeTab", "storage"],
  "content_scripts": [
    {
      "matches": ["https://*.bybit.com/*"],
      "js": ["./static/js/content.js"]
    }
  ]
}
